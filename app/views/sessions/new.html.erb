<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1>Log in</h1>

    <%= form_tag sessions_path,  :class => 'form_signin' do %>
        <p>
          <%= label_tag :email %><br />
          <%= text_field_tag :email, params[:email], class: 'form-control' %>
        </p>
        <br/>
        <p>
          <%= label_tag :password %><br />
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </p>
        <p><%= submit_tag "Log in", class: 'btn btn-primary' %></p>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>

